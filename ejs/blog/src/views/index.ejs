<%- include('_header.ejs') %>

    <body>
        <!-- CREATE A NEW CARD (__create)-->
        <% if(nuevo==true){ %>
            <div class=" container-fluid mb-5 mt-5 w-50 p-5 shadow p-3 mb-5 bg-tertiary rounded-5">
                <a class="icon-link icon-link-hover mb-4 text-secondary-emphasis link-underline-dark link-underline-opacity-25"
                    href="/inicio">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-arrow-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
                    </svg>
                    Inicio
                </a>
                <div class="container-fluid m-auto d-flex justify-content-center mb-2">
                    <h2>CREATE A NEW CARD</h2>
                </div>
                <p class=" d-flex justify-content-center">
                    Now you can create a new card!!
                </p>
                <div class="mb-3 mt-2">
                    <form action="/create" method="post">
                        <div class="input-group rounded">
                            <span class="input-group-text bg-light-border-subtle">Card Title</span>
                            <input class="form-control rounded-end" type="text" placeholder="Ingrese título"
                                name="title" aria-label="basic-addon3 basic-addon4">

                            <span class="input-group-text rounded-start ms-2">Add URL</span>
                            <input class="form-control rounded-end" type="text" placeholder="Ingrese URL de imagen"
                                name="url" aria-label="basic-addon3 basic-addon4">
                        </div>

                        <div class="input-group mt-3" id="basic-addon4">
                            <span class="input-group-text">Description</span>
                            <textarea class="form-control" placeholder="Add a description a comment for your card."
                                rows="3" name="description"></textarea>
                        </div>
                        <div class="container-fluid d-flex justify-content-center mt-4">
                            <button type="submit"
                                class="btn btn-outline-success d-flex justify-content-evenly mx-3">Create</button>
                            <button type="reset"
                                class="btn btn-outline-secondary d-flex justify-content-evenly">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- EDIT A CARD (_edit)-->
            <% }else if(nuevo==false && typeof card !=='undefined' ){ %>
                <div class=" container-fluid mb-5 mt-5 w-50 p-5 shadow p-3 mb-5 bg-tertiary rounded-5">
                    <a class="icon-link icon-link-hover mb-4 text-secondary-emphasis link-underline-dark link-underline-opacity-25"
                        href="/inicio">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-arrow-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
                        </svg>
                        Inicio
                    </a>
                    <div class="container-fluid m-auto d-flex justify-content-center mb-2">
                        <h2 class="text-center">
                            <%= titulo %>
                        </h2>
                    </div>
                    <div class="mb-3 mt-2">
                        <form action="/edit/<%= card._id %>" method="post">
                            <div class="d-flex justify-content-center m-5">
                                <img src="<%= card.url %>" class="card-img-top" alt="card_image" name="img"
                                    style="width: 300px; height: auto;">
                            </div>

                            <div class="input-group rounded">
                                <span class="input-group-text">Title</span>
                                <input class="form-control rounded-end" type="text" placeholder="Ingrese título"
                                    name="title" aria-label="basic-addon3 basic-addon4" value="<%= card.title %>">

                                <span class="input-group-text rounded-start ms-2">URL</span>
                                <input class="form-control rounded-end" type="text" placeholder="Ingrese URL de imagen"
                                    name="url" aria-label="basic-addon3 basic-addon4" value="<%= card.url %>">
                            </div>

                            <div class="input-group mt-3" id="basic-addon4">
                                <span class="input-group-text">Description</span>
                                <textarea class="form-control" placeholder="Add a description a comment for your card."
                                    rows="3" name="description"
                                    value="<%= card.description %>"><%= card.description %></textarea>
                            </div>
                            <div class="container-fluid d-flex justify-content-center mt-4">
                                <button type="submit"
                                    class="btn btn-outline-success d-flex justify-content-evenly mx-3">Edit</button>

                                <a href="/delete/<%= card._id %>"
                                    class="btn btn-outline-danger d-flex justify-content-evenly">Delete</a>

                            </div>
                        </form>
                    </div>
                </div>
                <% } %>
                    <!-- GENERAL VIST AND HIDE CARDS FROM EDIT OR CREATE OPTIONS -->
                    <% if(!nuevo && typeof card==="undefined" && !verMas){ %>
                        <h1 class="mx-3 d-flex justify-content-center mt-4 mb-2">
                            <%= titulo %>
                        </h1>
                        <p class=" d-flex justify-content-center">
                            All your cards!
                        </p>

                        <div class="container-fluid d-flex justify-content-center mb-4">
                            <div class="container-fluid d-flex w-25">

                                <div class="container fluid d-flex">
                                    <form action="/inicio" method="get" class="d-flex" role="search">
                                        <div class="container-fluid d-flex mx-auto">
                                            <select class="form-select text-center justify-content-center"
                                                name="filter">                                                
                                                <option value="title" <%=(filter==='title' ) ? 'selected' : '' %>>Título
                                                </option>
                                                <option value="description" <%=(filter==='description' ) ? 'selected'
                                                    : '' %>>Descripción</option>
                                            </select>
                                        </div>
                                        <input class="form-control rounded" type="search" placeholder="Search"
                                            aria-label="Search" name="search" />
                                        <button class="btn btn-dark mx-1" type="submit"><svg
                                                xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                                <path
                                                    d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                                            </svg></button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="row row-cols-1 row-cols-md-4 g-4 container-fluid mb-5">
                            <% for(let i=0; i< blog.length; i++ ){ %>
                                <div class="col">
                                    <div class="card h-100 shadow bg-tertiary">
                                        <div class=" image-container d-flex justify-content-center"
                                            style="width: auto; height: 100%;">
                                            <img src="<%= blog[i].url || 'https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg' %>"
                                                class="card-img-top" alt="card_image" name="img">
                                        </div>
                                        <div class="card-body d-flex flex-column mt-3">
                                            <h5 class="card-title d-flex justify-content-center">
                                                <%= blog[i].title %>
                                            </h5>
                                            <br><br>
                                            <div class="position-absolute bottom-0 start-0 m-1">
                                                <a href="/edit/<%= blog[i]._id %>"
                                                    class="btn btn-outline-secondary">Edit</a>
                                            </div>
                                            <div class="position-absolute bottom-0 end-0 m-1">
                                                <a href="/see-more/<%= blog[i]._id %>"
                                                    class="btn btn-outline-secondary">See more</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                        <% } %>

                            <!-- SEE-MORE DETAILS (_see-more)-->
                            <% if (verMas==true) { %>
                                <div class=" container-fluid mb-5 mt-5 w-50 p-5 shadow p-3 mb-5 bg-tertiary rounded-5">
                                    <a class="icon-link icon-link-hover mb-4 text-secondary-emphasis link-underline-dark link-underline-opacity-25"
                                        href="/inicio">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd"
                                                d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
                                        </svg>
                                        Inicio
                                    </a>
                                    <div class="container-fluid m-auto d-flex justify-content-center mb-2">
                                        <h1>
                                            <%= titulo %>
                                        </h1>
                                    </div>

                                    <div class="card mb-3">
                                        <div class="d-flex justify-content-center m-5">
                                            <img src="<%= url %>" class="card-img-top" alt="card_image"
                                                style="width: 100%; height: auto;">

                                        </div>
                                        <div class="card-body">
                                            <p class="card-text fs-4">
                                                <%= description || 'No description avaliable! ' %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
    </body>

    <%- include('_footer.ejs') %>